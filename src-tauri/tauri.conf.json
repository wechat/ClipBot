{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "ClipBot",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "create": true,
        "startDragging": true
      },
      "globalShortcut": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": true,
        "message": false,
        "open": false,
        "save": false
      }
    },
    "bundle": {
      "active": true,
      "targets": ["dmg", "updater"],
      "identifier": "com.clipbot.build",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/StoreLogo.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "label": "main",
        "title": "ClipBot",
        "titleBarStyle": "Overlay",
        "center": true,
        "fullscreen": false,
        "resizable": true,
        "hiddenTitle": true,
        "skipTaskbar": false,
        "width": 1120,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://github.com/wechat/ClipBot/releases/download/v1.0.1/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFBOEJBQUJGMjBGQUU1RDcKUldUWDVmb2d2NnFMR3JsUWxBQjN1eWgrNlJhUFRFWWk0akxBTllTZ001d2w1Z3FEam1IY2FvS1MK"
    }
  }
}
